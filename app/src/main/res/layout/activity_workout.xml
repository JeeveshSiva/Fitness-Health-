<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titlepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-thin"
        android:lineSpacingExtra="8dp"

        android:text="LATEST EXERCISES "
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/subtitlepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-thin"


        android:lineSpacingExtra="8dp"


        android:text="Top 4 excercise "

        android:textColor="@color/colorAccent"

        android:textSize="19sp"

        android:textStyle="bold"


        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/titlepage"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteY="80dp" />

    <View
        android:id="@+id/divpage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="48dp"

        android:layout_marginEnd="26dp"
        android:background="#25293E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitlepage"
        tools:ignore="InvalidId,MissingConstraints" />

    <TextView
        android:id="@+id/intropage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-thin"


        android:lineSpacingExtra="8dp"
        android:text="INTRODUCTION "
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/divpage"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="139dp" />


    <TextView
        android:id="@+id/subintropage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="sans-serif-thin"
        android:lineSpacingExtra="8dp"
        android:text="Get Ready for doing exercises ! "
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/intropage"
        tools:ignore="MissingConstraints,UnknownId" />


    <LinearLayout
        android:id="@+id/fitone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subintropage"
        tools:ignore="MissingConstraints">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/pullup" />


        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fitonetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Arm workout"
                android:textColor="@color/colorAccent"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fitonedesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="3 minutes"
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dp"
            android:background="@drawable/btn"

            android:text="Get Started"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fittwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitone"
        tools:ignore="MissingConstraints,UnknownId">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/gym1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fittwotitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Biceps Workout"
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fittwodesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5 minutes"
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dp"
            android:background="@drawable/btn"
            android:text="Get Started"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fitthree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fittwo"
        tools:ignore="MissingConstraints,UnknownId">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/pushup" />


        <LinearLayout
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fitthreetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Pushups "
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fitthreedesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="4 minutes"
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dp"
            android:background="@drawable/btn"
            android:text="Get Started"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fitfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitthree"
        tools:ignore="MissingConstraints">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/push" />


        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fitfourtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Leg Workout"
                android:textColor="@color/colorAccent"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fitfourdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="6 minutes"
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dp"
            android:background="@drawable/btn"
            android:text="Get Started"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="10dp" />


    </LinearLayout>

    <View
        android:id="@+id/btnprogress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@color/black"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />

    <TextView
        android:id="@+id/btnexercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"


        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"

        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="CONTINUE WORKOUT"


        android:textAlignment="center"

        android:textColor="@color/colorAccent"

        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonalarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#201919"
        android:text="Set Reminder"
        app:layout_constraintBottom_toTopOf="@+id/btnprogress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="83dp"
        android:backgroundTint="#0C0B0B"
        android:text="music"
        app:layout_constraintBottom_toTopOf="@+id/fitone"
        app:layout_constraintEnd_toEndOf="@+id/buttonalarm"
        app:layout_constraintStart_toStartOf="@+id/buttonalarm"
        app:layout_constraintTop_toBottomOf="@+id/buttonalarm"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>